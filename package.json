{
  "name": "smolbot",
  "version": "2.0.0",
  "description": "Custom mod/misc/util bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "tsc --build && node --env-file=.env --enable-source-maps --trace-warnings dist/index.js",
    "start:dist": "node --env-file=.env --enable-source-maps --trace-warnings dist/index.js",
    "start:prod": "prisma migrate deploy && node --enable-source-maps dist/index.js",
    "generate": "prisma generate && node scripts/fix-prisma-types.js",
    "build": "tsc --build",
    "lint": "biome check && tsc --noEmit",
    "lint:fix": "biome check --write && prisma format && tsc --noEmit",
    "sentry:sourcemaps:inject": "sentry-cli sourcemaps inject ./dist",
    "sentry:sourcemaps:upload": "sentry-cli sourcemaps upload ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtoraSuunva/smolbot.git"
  },
  "author": "AtoraSuunva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtoraSuunva/smolbot/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "homepage": "https://github.com/AtoraSuunva/smolbot#readme",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.5.1",
    "@prisma/adapter-better-sqlite3": "^6.7.0",
    "@prisma/client": "~6.7.0",
    "@prisma/instrumentation": "^6.7.0",
    "@sapphire/shapeshift": "^4.0.0",
    "better-sqlite3": "^11.9.1",
    "char-info": "^0.3.5",
    "convert-units": "~2.3.4",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "discord-api-types": "^0.38.2",
    "discord.js": "~14.19.3",
    "env-var": "~7.5.0",
    "google-translate-api-x": "^10.7.2",
    "luxon": "^3.6.1",
    "p-queue": "^8.1.0",
    "parse-human-relative-time": "^4.0.0",
    "pino-dev": "^4.0.3",
    "pluralize": "^8.0.0",
    "pretty-ms": "~9.2.0",
    "prisma": "^6.7.0",
    "sleetcord": "2.4.0",
    "sleetcord-common": "^12.0.0",
    "string-width": "^7.2.0",
    "super-regex": "^1.0.0",
    "tseep": "^1.3.1",
    "unicode-name": "^1.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@sentry/cli": "^2.43.1",
    "@types/convert-units": "^2.3.11",
    "@types/luxon": "^3.6.2",
    "@types/node": "~22.15.3",
    "@types/pluralize": "^0.0.33",
    "typescript": "~5.8.3"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
