{
  "name": "smolbot",
  "version": "2.0.0",
  "description": "Custom mod/misc/util bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "tsc --build && node --env-file=.env --enable-source-maps dist/index.js",
    "start:prod": "npx prisma migrate deploy && node --enable-source-maps dist/index.js",
    "build": "tsc --build",
    "lint": "eslint src/ && prettier --check src/ && tsc --noEmit",
    "lint:fix": "eslint src/ --fix && prettier --write src/ && prisma format && tsc --noEmit",
    "sentry:sourcemaps:inject": "sentry-cli sourcemaps inject ./dist",
    "sentry:sourcemaps:upload": "sentry-cli sourcemaps upload ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtoraSuunva/smolbot.git"
  },
  "author": "AtoraSuunva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtoraSuunva/smolbot/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "homepage": "https://github.com/AtoraSuunva/smolbot#readme",
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.5.0",
    "@prisma/client": "~5.15.0",
    "@sapphire/shapeshift": "^4.0.0",
    "char-info": "^0.3.2",
    "convert-units": "~2.3.4",
    "csv-parse": "^5.5.6",
    "csv-stringify": "^6.5.0",
    "discord-api-types": "^0.37.87",
    "discord.js": "~14.15.3",
    "env-var": "~7.5.0",
    "luxon": "^3.4.4",
    "p-queue": "^8.0.1",
    "parse-human-relative-time": "^3.0.2",
    "pino-dev": "^4.0.3",
    "pluralize": "^8.0.0",
    "pretty-ms": "~9.0.0",
    "sleetcord": "1.6.0",
    "sleetcord-common": "^7.0.0",
    "undici": "^6.18.2"
  },
  "devDependencies": {
    "@sentry/cli": "^2.32.1",
    "@types/convert-units": "^2.3.9",
    "@types/luxon": "^3.4.2",
    "@types/node": "~20.14.8",
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "~7.13.1",
    "@typescript-eslint/parser": "~7.13.1",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.29.1",
    "prettier": "~3.3.1",
    "prisma": "~5.15.0",
    "typescript": "~5.5.2"
  }
}
