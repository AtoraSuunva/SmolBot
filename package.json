{
  "name": "smolbot",
  "version": "2.0.0",
  "description": "Custom mod/misc/util bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "tsc --build && node -r dotenv/config dist/index.js",
    "start:prod": "npx prisma migrate deploy && node dist/index.js",
    "build": "tsc --build",
    "lint": "eslint src/ && prettier --check src/ && tsc --noEmit",
    "lint:fix": "eslint src/ --fix && prettier --write src/ && tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtoraSuunva/smolbot.git"
  },
  "author": "AtoraSuunva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtoraSuunva/smolbot/issues"
  },
  "homepage": "https://github.com/AtoraSuunva/smolbot#readme",
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.4.0",
    "@prisma/client": "~5.0.0",
    "@sapphire/shapeshift": "^3.9.2",
    "char-info": "^0.3.2",
    "convert-units": "~2.3.4",
    "csv-parse": "^5.4.0",
    "csv-stringify": "^6.4.0",
    "discord.js": "~14.11.0",
    "dotenv": "~16.3.1",
    "env-var": "~7.3.1",
    "humanize-duration": "~3.29.0",
    "pino": "~8.14.1",
    "pino-dev": "^4.0.2",
    "pluralize": "^8.0.0",
    "pretty-ms": "~8.0.0",
    "sleetcord": "0.15.1",
    "undici": "~5.22.1"
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.6",
    "@types/humanize-duration": "~3.27.1",
    "@types/node": "~20.4.2",
    "@types/pluralize": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "~6.1.0",
    "@typescript-eslint/parser": "~6.1.0",
    "eslint": "~8.45.0",
    "eslint-config-prettier": "~8.8.0",
    "eslint-plugin-import": "~2.27.5",
    "prettier": "~3.0.0",
    "prisma": "~5.0.0",
    "typescript": "~5.1.6"
  },
  "pnpm": {
    "patchedDependencies": {
      "@dice-roller/rpg-dice-roller@5.4.0": "patches/@dice-roller__rpg-dice-roller@5.4.0.patch"
    }
  }
}
