{
  "name": "smolbot",
  "version": "2.0.0",
  "description": "Custom mod/misc/util bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "tsc --build && node --env-file=.env --enable-source-maps dist/index.js",
    "start:prod": "npx prisma migrate deploy && node --enable-source-maps dist/index.js",
    "build": "tsc --build",
    "lint": "eslint src/ && prettier --check src/ && tsc --noEmit",
    "lint:fix": "eslint src/ --fix && prettier --write src/ && prisma format && tsc --noEmit",
    "sentry:sourcemaps:inject": "sentry-cli sourcemaps inject ./dist",
    "sentry:sourcemaps:upload": "sentry-cli sourcemaps upload ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtoraSuunva/smolbot.git"
  },
  "author": "AtoraSuunva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtoraSuunva/smolbot/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "homepage": "https://github.com/AtoraSuunva/smolbot#readme",
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.5.0",
    "@prisma/client": "~5.13.0",
    "@sapphire/shapeshift": "^3.9.7",
    "char-info": "^0.3.2",
    "convert-units": "~2.3.4",
    "csv-parse": "^5.5.5",
    "csv-stringify": "^6.4.6",
    "discord.js": "~14.14.1",
    "env-var": "~7.4.1",
    "p-queue": "^8.0.1",
    "pino-dev": "^4.0.3",
    "pluralize": "^8.0.0",
    "pretty-ms": "~9.0.0",
    "sleetcord": "1.4.1",
    "sleetcord-common": "^7.0.0",
    "undici": "^6.15.0"
  },
  "devDependencies": {
    "@sentry/cli": "^2.31.2",
    "@types/convert-units": "^2.3.9",
    "@types/node": "~20.12.8",
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "~7.8.0",
    "@typescript-eslint/parser": "~7.8.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.29.1",
    "prettier": "~3.2.5",
    "prisma": "~5.13.0",
    "typescript": "~5.4.5"
  }
}
