{
  "name": "smolbot",
  "version": "2.0.0",
  "description": "Custom mod/misc/util bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "tsc --build && node -r dotenv/config dist/index.js",
    "start:prod": "npx prisma migrate deploy && node dist/index.js",
    "build": "tsc --build",
    "lint": "eslint src/ && prettier --check src/ && tsc --noEmit",
    "lint:fix": "eslint src/ --fix && prettier --write src/ && prisma format && tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtoraSuunva/smolbot.git"
  },
  "author": "AtoraSuunva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtoraSuunva/smolbot/issues"
  },
  "homepage": "https://github.com/AtoraSuunva/smolbot#readme",
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.4.1",
    "@prisma/client": "~5.1.1",
    "@sapphire/shapeshift": "^3.9.2",
    "char-info": "^0.3.2",
    "convert-units": "~2.3.4",
    "csv-parse": "^5.4.0",
    "csv-stringify": "^6.4.0",
    "discord.js": "~14.13.0",
    "dotenv": "~16.3.1",
    "env-var": "~7.3.1",
    "pino": "~8.15.0",
    "pino-dev": "^4.0.2",
    "pluralize": "^8.0.0",
    "pretty-ms": "~8.0.0",
    "rollbar": "^2.26.2",
    "sleetcord": "0.16.1",
    "sleetcord-common": "^2.3.0",
    "undici": "^5.23.0"
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.6",
    "@types/node": "~20.5.1",
    "@types/pluralize": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "~6.4.0",
    "@typescript-eslint/parser": "~6.4.0",
    "eslint": "~8.47.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-plugin-import": "~2.28.1",
    "prettier": "~3.0.2",
    "prisma": "~5.1.1",
    "typescript": "~5.1.6"
  }
}
